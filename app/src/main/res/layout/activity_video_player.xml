<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".video.VideoPlayerActivity"
        android:keepScreenOn="true"
        android:id="@+id/video_background"
>
        <org.videolan.libvlc.util.VLCVideoLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <View
            android:id="@+id/dark_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:clickable="false"
        />

        <com.astarivi.kaizoyu.video.gui.PlayerSkipView
            android:id="@+id/skip_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="11"
                android:secondaryProgress="11"
                android:progress="0"
                android:indeterminate="false"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/initial_download_progress"
                android:progressDrawable="@drawable/progress_circle"
                app:layout_constraintStart_toStartOf="@+id/video_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/video_frame"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <com.astarivi.kaizoyu.video.gui.PlayerBarView
            android:id="@+id/player_bar"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/player_info_bar"
            android:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center_vertical"
        >
                <ImageView
                    android:id="@+id/top_back_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_back_new"
                    app:tint="@color/player_item"
                    android:contentDescription="@string/go_back_desc"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                >
                        <TextView
                            android:id="@+id/anime_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="One Punch Man"
                            android:textColor="@color/player_item"
                            android:singleLine="true"
                            tools:ignore="HardcodedText"
                    />
                        <TextView
                            android:id="@+id/episode_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Episode 1 - World Strongest Men"
                            android:textColor="@color/player_item"
                            android:singleLine="true"
                            tools:ignore="HardcodedText"
                        />
                </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/download_speed"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/starting_download"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/initial_download_progress"
            android:textSize="14sp"
        />

        <TextView
            android:id="@+id/download_status"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/starting_irc_handshake"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/download_speed"
        />
</androidx.constraintlayout.widget.ConstraintLayout>